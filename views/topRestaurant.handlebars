<h1>人氣餐廳</h1>
<hr />

<div class="container">
  <div class="row justify-content-center">
    {{#each restaurants}}
    <div class="col-md-10">
      <div class="card m-3">
        <div class="row">
          <div class="col-md-4 col-12 position-relative">
            <a href="/restaurants/{{this.id}}">
              <div class="w-100"
                style="background-image: url({{this.image}});background-repeat: no-repeat;background-position: center;background-size: cover; height:100%;">
              </div>
            </a>
          </div>
          <div class="col-md-8 col-12">
            <a href="/restaurants/{{this.id}}" class="text-dark">
              <h5>{{this.name}}</h5>
            </a>
            <span class="badge badge-secondary">收藏數：{{this.favoratedUserCount}}</span>
            <p>{{this.description}}</p>

            <div class="card-footer">
              <a href="/restaurants/{{this.id}}" class="btn btn-primary">Show</a>
              {{#if isFavorited }}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"
                class="d-inline-block">
                <button type="submit" class="btn btn-danger">移除最愛</button>
              </form>
              {{else}}
              <form action="/favorite/{{this.id}}" method="POST" style="display: contents;" class="d-inline-block">
                <button type="submit" class="btn btn-primary">加到最愛</button>
              </form>
              {{/if}}
            </div>

          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>